# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database
PGHOST=hostname
PGPORT=port
PGUSER=username
PGPASSWORD=password
PGDATABASE=database

# Session Configuration 
SESSION_SECRET=your-secret-session-key

# Note: Campaign API Key is now stored in the database settings
# No environment variable required for API key

# AWS SES Email Configuration (for password reset functionality)
SES_REGION=ap-south-1
SES_USERNAME=your-ses-access-key-id
SES_PASSWORD=your-ses-secret-access-key
SES_SENDER=your-verified-email@yourdomain.com

# Server Configuration
PORT=5000
NODE_ENV=production