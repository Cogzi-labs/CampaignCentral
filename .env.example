# Database Connection
DATABASE_URL="postgresql://username:password@hostname:port/database"
# Session Configuration
SESSION_SECRET="your-secret-session-key"

# Note: Campaign API Key is now stored in the database settings
# No environment variable required

# AWS SES Email Configuration
SES_REGION="ap-south-1"
SES_HOST="email-smtp.ap-south-1.amazonaws.com"
SES_PORT=587
SES_AUTH="login"
SES_DOMAIN="yourdomain.com"
SES_USERNAME="your-ses-access-key-id"
SES_PASSWORD="your-ses-secret-access-key"
SES_SENDER="your-verified-email@yourdomain.com"

# Server Configuration
PORT=5000
NODE_ENV="production"